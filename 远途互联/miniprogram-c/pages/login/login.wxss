.container {
  padding: 0 5%;
}
.form {
  margin-top: 48rpx;
}
.form-item {
  height: 97rpx;
  line-height: 97rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.space {
  margin: 40rpx 0 16rpx;
}
.phone, .password {
  width: 83%;
  font-size: 32rpx;
  vertical-align: middle;
  color: #333;
  display: inline-block;
}
.write {
  border-bottom: 1rpx solid #307AFF;
}
button:not([size='mini']) {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  font-size: 32rpx;
  margin: 80rpx 0 0;
  background: #307AFF;
}
button.btn.button-hover {
  background: #307AFF;
  opacity: 0.9
}
.forget {
  text-align: right;
  color: #333333;
  font-size: 24rpx;
  line-height: 44rpx;
}
.icon1 {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}