.container {
  height: 100vh;
  position: relative;
}
.header-img {
  overflow: hidden;
  background-color: #307AFF;
}
.img {
  width: 100%;
  height: 422rpx;
}
.login-item {
  width: 90%;
  position: absolute;
  top: 382rpx;
  background: #fff;
  border-radius: 54rpx 54rpx 0 0;
  padding: 96rpx 5% 0;
  z-index: 2;
}
.welcome {
  color: #333333;
  font-size: 40rpx;
  line-height: 56rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
}
.welcome-tip {
  color: #666666;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-bottom: 100rpx;
}
button:not([size='mini']) {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0;
  font-size: 32rpx;
}
.btn {
  color: #999999;
  margin-top: 40rpx;
}